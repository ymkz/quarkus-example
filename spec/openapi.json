{
  "openapi" : "3.1.0",
  "components" : {
    "schemas" : {
      "BookOrder" : {
        "type" : "string",
        "enum" : [ "+price", "-price", "+published_at", "-published_at" ]
      },
      "BookStatus" : {
        "type" : "string",
        "enum" : [ "UNPUBLISHED", "PUBLISHED", "OUT_OF_PRINT" ]
      },
      "Hit" : {
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "integer",
            "format" : "int64",
            "examples" : [ 1 ]
          },
          "isbn" : {
            "type" : "string",
            "examples" : [ "9784873115658" ]
          },
          "title" : {
            "type" : "string",
            "examples" : [ "リーダブルコード" ]
          },
          "price" : {
            "type" : "integer",
            "format" : "int32",
            "examples" : [ 2640 ]
          },
          "status" : {
            "type" : "string",
            "examples" : [ "PUBLISHED" ],
            "$ref" : "#/components/schemas/BookStatus"
          },
          "authorId" : {
            "type" : "integer",
            "format" : "int32",
            "examples" : [ 1 ]
          },
          "authorName" : {
            "type" : "string",
            "examples" : [ "Dustin Boswell" ]
          },
          "publisherId" : {
            "type" : "integer",
            "format" : "int32",
            "examples" : [ 1 ]
          },
          "publisherName" : {
            "type" : "string",
            "examples" : [ "O'Reilly" ]
          }
        }
      },
      "Instant" : {
        "type" : "string",
        "format" : "date-time",
        "examples" : [ "2022-03-10T16:15:50Z" ]
      },
      "Pagination" : {
        "type" : "object",
        "properties" : {
          "offset" : {
            "type" : "integer",
            "format" : "int32"
          },
          "limit" : {
            "type" : "integer",
            "format" : "int32"
          },
          "total" : {
            "type" : "integer",
            "format" : "int32"
          }
        }
      },
      "findBooksResponse" : {
        "type" : "object",
        "properties" : {
          "pagination" : {
            "$ref" : "#/components/schemas/Pagination"
          },
          "hits" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/components/schemas/Hit"
            }
          }
        }
      }
    }
  },
  "info" : {
    "title" : "API仕様書",
    "version" : "1.0.0"
  },
  "tags" : [ {
    "name" : "book"
  } ],
  "servers" : [ {
    "url" : "http://localhost:8080",
    "description" : "ローカル環境"
  } ],
  "paths" : {
    "/api/v1/books" : {
      "get" : {
        "summary" : "booksを検索する",
        "operationId" : "findBooks",
        "tags" : [ "book" ],
        "parameters" : [ {
          "description" : "ISBN-13:完全一致",
          "example" : "9784873115658",
          "name" : "isbn",
          "in" : "query",
          "schema" : {
            "type" : "string"
          }
        }, {
          "description" : "取得数",
          "name" : "limit",
          "in" : "query",
          "schema" : {
            "type" : "integer",
            "format" : "int32",
            "maximum" : 100,
            "minimum" : 1,
            "default" : "100"
          }
        }, {
          "description" : "取得開始位置",
          "name" : "offset",
          "in" : "query",
          "schema" : {
            "type" : "integer",
            "format" : "int32",
            "minimum" : 0,
            "default" : "0"
          }
        }, {
          "description" : "並び順",
          "name" : "order",
          "in" : "query",
          "schema" : {
            "allOf" : [ {
              "$ref" : "#/components/schemas/BookOrder"
            }, {
              "default" : "-published_at"
            } ]
          }
        }, {
          "description" : "価格:下限",
          "name" : "priceFrom",
          "in" : "query",
          "schema" : {
            "type" : "integer",
            "format" : "int32",
            "minimum" : 0
          }
        }, {
          "description" : "価格:上限",
          "name" : "priceTo",
          "in" : "query",
          "schema" : {
            "type" : "integer",
            "format" : "int32",
            "minimum" : 0
          }
        }, {
          "description" : "出版日:終了",
          "name" : "publishedTimeEnd",
          "in" : "query",
          "schema" : {
            "$ref" : "#/components/schemas/Instant"
          }
        }, {
          "description" : "出版日:開始",
          "name" : "publishedTimeStart",
          "in" : "query",
          "schema" : {
            "$ref" : "#/components/schemas/Instant"
          }
        }, {
          "description" : "ステータス",
          "name" : "status",
          "in" : "query",
          "schema" : {
            "$ref" : "#/components/schemas/BookStatus"
          }
        }, {
          "description" : "書籍タイトル:部分一致",
          "name" : "title",
          "in" : "query",
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "OK",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/findBooksResponse"
                }
              }
            }
          }
        }
      }
    }
  }
}